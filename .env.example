# Flask Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Flask Environment: development, production, testing
FLASK_ENV=production

# Secret Key - MUST be changed in production (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-change-me

# Database Configuration
DATABASE_URL=postgresql://username:password@db:5432/asset_tracker

# Database Connection Pooling (adjust based on your workload)
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_MAX_OVERFLOW=20

# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_LIFETIME=3600

# Rate Limiting (optional: use Redis for multi-instance deployments)
# REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Settings
MAX_CONTENT_LENGTH=16777216

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password-here
POSTGRES_DB=asset_tracker
